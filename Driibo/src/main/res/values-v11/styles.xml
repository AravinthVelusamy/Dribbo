<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="android:actionBarStyle">@style/ActionbarStyle</item>
    </style>

    <style name="ActionbarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dribbble_graphite</item>
        <item name="android:actionOverflowButtonStyle">@drawable/ic_action_overflow</item>
    </style>

</resources>
